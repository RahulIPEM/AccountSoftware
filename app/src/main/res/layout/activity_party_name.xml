<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ibridotechnologies.com.accountsoftware.PartyName">

    <TextView
        android:id="@+id/txtFontParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FontAwesome"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchableSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/financialYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtFontParty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/searchableSpinner"/>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/searchableSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/financialYear"
        app:layout_constraintEnd_toEndOf="@+id/btnAddParty"
        app:layout_constraintBottom_toBottomOf="@+id/btnGetParty"/>

    <Button
        android:id="@+id/btnAddParty"
        android:layout_width="42sp"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:textSize="35sp"
        android:text="+"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnGetParty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/searchableSpinner"
        app:layout_constraintTop_toTopOf="@+id/financialYear"
        app:layout_constraintHorizontal_bias=".98"/>

    <Button
        android:id="@+id/btnGetParty"
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchableSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
