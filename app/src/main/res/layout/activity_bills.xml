<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ibridotechnologies.com.accountsoftware.Bills">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchColumns="1,2,3,4"
            android:padding="10dp">

            <TableRow>
                <TextView
                    android:id="@+id/txtFontComputer"
                    android:layout_height="wrap_content"
                    android:text="Multi Graphic Computer"
                    android:layout_span="6"
                    android:textStyle="bold"
                    android:layout_marginBottom="20sp"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:text="Bill To"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:text="Bill Date"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/txtPartyName"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:text="Party Name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtBillDate"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textAlignment="viewEnd"
                    android:text="Bill Date"
                    android:textSize="16sp" />
            </TableRow>


            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:text="Bill No"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textAlignment="viewEnd"
                    android:text="Book Name"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/txtBillNo"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:text="Party Name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtBookName"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textAlignment="viewEnd"
                    android:text="Till the end of time"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"></TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S No."
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_column="3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"></TableRow>

            <TableRow android:id="@+id/trPages">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 ."
                    android:layout_span="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:id="@+id/pagesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages"
                    android:layout_span="1"
                    android:layout_column="3"/>

                <TextView
                    android:id="@+id/pagesRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <TextView
                    android:id="@+id/pagesTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow android:id="@+id/trArtwork">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 ."
                    android:layout_span="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ArtWork"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:id="@+id/artwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="artwork"
                    android:layout_span="1"
                    android:layout_column="3"/>

                <TextView
                    android:id="@+id/artworkRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <TextView
                    android:id="@+id/artworkTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow android:id="@+id/trColoring">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 ."
                    android:layout_span="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coloring"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:id="@+id/coloring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="coloring"
                    android:layout_span="1"
                    android:layout_column="3"/>

                <TextView
                    android:id="@+id/coloringRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <TextView
                    android:id="@+id/coloringTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow android:id="@+id/trWriting">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 ."
                    android:layout_span="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Writing"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:id="@+id/writing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="writing"
                    android:layout_span="1"
                    android:layout_column="3"/>

                <TextView
                    android:id="@+id/writingRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <TextView
                    android:id="@+id/writingTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow android:id="@+id/trProofing">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 ."
                    android:layout_span="1"
                    android:layout_column="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proofing"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:id="@+id/proofing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages"
                    android:layout_span="1"
                    android:layout_column="3"/>

                <TextView
                    android:id="@+id/ProofingRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <TextView
                    android:id="@+id/proofingTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"></TableRow>

            <TableRow android:id="@+id/trTotal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textStyle="bold"
                    android:layout_span="1"
                    android:layout_column="2"/>

                <TextView
                    android:id="@+id/grandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"></TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:text="Authorise Signature"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:layout_span="6"/>
            </TableRow>

            <TableRow android:id="@+id/trShare"
                android:layout_marginTop="30sp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="This bill is computer generated."
                        android:layout_span="3"
                        android:layout_column="1"/>

                <ImageButton
                    android:id="@+id/homeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/homeicon"
                    android:background="@null"
                    android:layout_span="1"
                    android:layout_column="4"/>

                <ImageButton
                    android:id="@+id/shareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shareicon"
                    android:background="@null"
                    android:layout_span="1"
                    android:layout_column="5"/>
            </TableRow>

        </TableLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
