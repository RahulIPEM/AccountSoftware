<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddParty">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textFontIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:text="FontAwesome Icon"/>

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Party"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textFontIcon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="18dp"/>

            <EditText
                android:id="@+id/txt_party_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtView"
                android:hint="Party's Name"
                android:layout_margin="10dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/txt_party_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_party_name"
                android:hint="Party's Address"
                android:layout_margin="10dp"
                android:inputType="textPostalAddress"/>

            <Spinner
                android:id="@+id/spinner_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_party_address"
                android:layout_margin="10dp"
                android:hint="Party's State"/>

            <Spinner
                android:id="@+id/spinner_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_state"
                android:layout_margin="10dp"
                android:hint="Party's District"/>

            <EditText
                android:id="@+id/txt_party_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_district"
                android:hint="Party's Mobile"
                android:layout_margin="10dp"
                android:inputType="number"/>

            <EditText
                android:id="@+id/txt_party_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_party_mobile"
                android:hint="Party's Email"
                android:layout_margin="10dp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/txt_party_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_party_email"
                android:hint="Party's Telephone"
                android:layout_margin="10dp"
                android:inputType="number"/>

            <Button
                android:id="@+id/btn_add_party"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Add Party"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_party_telephone"
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="18dp"/>

        </RelativeLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
