<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ibridotechnologies.com.accountsoftware.Confirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtFontConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontAwesome"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure..? You want to update selected order..?"
            android:layout_margin="16sp"/>

        <TextView
            android:id="@+id/txtBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontAwesome"
            android:layout_margin="16sp"/>

        <TextView
            android:id="@+id/txtOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontAwesome"
            android:layout_margin="16sp"/>

        <TextView
            android:id="@+id/txtFinancialYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontAwesome"
            android:layout_margin="16sp"/>

        <Button
            android:id="@+id/btnSure"
            android:layout_width="230sp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:layout_margin="16sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
